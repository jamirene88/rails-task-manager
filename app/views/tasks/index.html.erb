
<h1>My Tasks</h1>

<ul class="list-group">
  <% @tasks.each do |task| %>
  <li class="list-group-item">
    <% if task.completed %>
     <i class="far fa-check-square"></i>
     <% else %>
     <i class="far fa-square"></i>
     <% end %>
    <%= link_to task.title, task_path(task) %>
   <%= link_to "", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" },class: "far fa-trash-alt" %>
  </li>
<% end %>
</ul>
<div class='text-center'>
<%= link_to '+ add a new task', tasks_new_path, class: 'btn btn-success' %>
</div>

